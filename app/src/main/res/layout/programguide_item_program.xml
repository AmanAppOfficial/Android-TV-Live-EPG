<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:layout_margin="32dp"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:layout_margin="20dp"
    tools:parentTag="android.widget.FrameLayout">

    <TextView
        android:id="@+id/titleview"
        style="@style/ProgramGuide.Text.Program.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Item title"
        android:textSize="12sp"
        android:fontFamily="@font/helvetica_neue_medium"
        android:background="#00ffffff"/>

    <TextView
        android:id="@+id/title"
        style="@style/ProgramGuide.Text.Program.Title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:text="Item title"
        android:textSize="12sp"
        android:fontFamily="@font/helvetica_neue_medium"
        android:background="#00ffffff"/>
<!--        android:background="@drawable/splash_background"/>-->

    <ProgressBar
        android:id="@+id/progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_gravity="bottom"
        android:duplicateParentState="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:minWidth="0dp"
        android:progressBackgroundTint="@color/programguide_item_progress_background"
        android:progressTint="@color/programguide_item_progress_foreground"
        android:visibility="gone"
        tools:progress="50"
        tools:visibility="visible" />
</merge>